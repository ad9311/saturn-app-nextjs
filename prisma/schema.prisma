generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String @id @default(cuid())
  accountId Int    @unique @map("account_id")
  name      String
  email     String @unique
  image     String

  budgets Budget[]

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("users")
}

model Budget {
  id               String  @id @default(cuid())
  month            Int
  year             Int
  balance          Decimal @default(0.0)
  totalIncome      Decimal @default(0.0) @map("total_income")
  totalExpenses    Decimal @default(0.0) @map("total_expenses")
  transactionCount Int     @default(0) @map("transaction_count")
  incomeCount      Int     @default(0) @map("income_count")
  expenseCount     Int     @default(0) @map("expense_count")

  user   User @relation(fields: [userAccountId], references: [accountId])
  userAccountId Int @map("user_acount_id")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("budgets")
}
